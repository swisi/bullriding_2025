# Copy to ".env" and adjust values for your environment

# Flask
FLASK_APP=wsgi:app
FLASK_ENV=development

# Security
# IMPORTANT: set a strong random secret in production
SECRET_KEY=CHANGE_ME

# Database (local development)
# For SQLite (default):
DATABASE_URL=sqlite:///database/site.db
# For Postgres example:
# DATABASE_URL=postgresql+psycopg://user:password@db:5432/bullriding

# Optional: used by `flask run` during local development
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000

